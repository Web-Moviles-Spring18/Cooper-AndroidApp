<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/coopName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/imagePool"
        android:fontFamily="@font/roboto_mono_medium"
        android:text="Name"
        android:textColor="@color/blue_strong"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/coopAmount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coopName"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/coopName"
        android:fontFamily="@font/roboto_mono_medium"
        android:text="Amount"
        android:textColor="@color/background_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imagePool"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/coopName"
        android:layout_marginStart="17dp"
        app:srcCompat="@drawable/cooper_icon" />
</RelativeLayout>